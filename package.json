{
    "name": "robot-manager-frontend",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "start": "NODE_ENV=production ts-node server/main.js",
        "dev": "nodemon server/main.js -w server",
        "build": "vite build",
        "prepare": "husky install"
    },
    "dependencies": {
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "devDependencies": {
        "husky": "^8.0.0",
        "lint-staged": "^14.0.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3"
    },
    "prettier": {
        "tabWidth": 4
    },
    "lint-staged": {
        "src/**/*.{html,js,ts,scss}": [
            "prettier --write"
        ],
        "src/**/*.ts": [
            "eslint --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
